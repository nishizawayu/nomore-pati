// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password      String
  image         String?  // プロフィール画像URL
  startDate     DateTime @default(now()) // パチ禁開始日
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // フレンド関係
  sentRequests     Friendship[] @relation("SentRequests")
  receivedRequests Friendship[] @relation("ReceivedRequests")

  // 通知
  notifications    Notification[]
}

model Friendship {
  id          String           @id @default(cuid())
  senderId    String
  receiverId  String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  sender   User @relation("SentRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
}

enum FriendshipStatus {
  PENDING  // 申請中
  ACCEPTED // 承認済み
  REJECTED // 拒否
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    NewsCategory @default(INFO)
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum NewsCategory {
  INFO        // お知らせ
  UPDATE      // アップデート
  MAINTENANCE // メンテナンス
  EVENT       // イベント
}

model Notification {
  id          String           @id @default(cuid())
  userId      String           // 通知を受け取るユーザー
  type        NotificationType
  title       String
  message     String
  read        Boolean          @default(false)
  relatedUserId String?        // 関連するユーザー（リセットした人など）
  createdAt   DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum NotificationType {
  FRIEND_RESET    // フレンドがリセットした
  FRIEND_REQUEST  // フレンド申請が来た
  FRIEND_ACCEPTED // フレンド申請が承認された
}
